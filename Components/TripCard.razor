<div class="d-flex position-relative">
    <div style="width: 23.125rem;height: 25rem;border-radius: 1.625rem;background: var(--white, #FFF); 
            box-shadow: 0px 1.852px 3.148px 0px rgba(0, 0, 0, 0.00), 0px 8.148px 6.519px 0px rgba(0, 0, 0, 0.01), 0px 20px 13px 0px rgba(0, 0, 0, 0.01), 0px 38.519px 25.481px 0px rgba(0, 0, 0, 0.01), 0px 64.815px 46.852px 0px rgba(0, 0, 0, 0.02), 0px 100px 80px 0px rgba(0, 0, 0, 0.02);
            z-index:1000; display:flex; align-items: center;justify-content: center;
        ">
        <div>
            <img src="@Greece" alt="Image of a woman in greece" style="cursor: pointer;" />
            <h3 style="font-size: 1.125rem;font-family: Poppins; " class="fw-bold mt-3">Trip To Greece</h3>
            <div class="d-flex align-items-center"
                style="color: var(--text-2, #84829A);font-family: Poppins;font-size: 1rem; ">
                <span>14-29 June</span>
                <span>|</span>
                <span class="ms-3">by Robbin joseph</span>
            </div>
            <div class="d-flex align-items-center mt-3">
                <img src="@Leaf" alt="leaf icon" class="mx-3"
                    style="background-color:#F5F5F5; border-radius:50%; padding:10px;cursor: pointer;" />
                <img src="@Map" alt="map icon" class="mx-3"
                    style="background-color:#F5F5F5; border-radius:50%; padding:10px;cursor: pointer;" />
                <img src="@Send" alt="nav icon" class="mx-3"
                    style="background-color:#F5F5F5; border-radius:50%; padding:10px;cursor: pointer;" />
            </div>
            <div class="d-flex align-items-center my-4">
                <img src="@Building" alt="building icon" style="cursor: pointer;" />
                <span style="color: var(--text-2, #84829A);" class="ms-3">24 people going</span>
            </div>
        </div>
    </div>
    <div style="margin-left: -150px; width: 16.4375rem; height: 8.0625rem; border-radius: 1.125rem;background: var(--white, #FFF); 
        box-shadow: 0px 1.852px 3.148px 0px rgba(0, 0, 0, 0.00), 0px 8.148px 6.519px 0px rgba(0, 0, 0, 0.01), 0px 20px 13px 0px rgba(0, 0, 0, 0.01), 0px 38.519px 25.481px 0px rgba(0, 0, 0, 0.01), 0px 64.815px 46.852px 0px rgba(0, 0, 0, 0.02), 0px 100px 80px 0px rgba(0, 0, 0, 0.02);
        z-index:2000; display:flex; align-items: center;justify-content: center; margin-top: 17rem; cursor:pointer;
        ">
        <div>
            <div class="d-flex">
                <img src="@Rome" alt="image of rome" style="width: 4.625rem;height: 4.125rem; border-radius:50%;" />
                <div class="ms-3">
                    <span>Ongoing</span><br />
                    <span>Trip to rome</span>
                    <h6><span style="color: var(--1, #8A79DF); font-family: Poppins;">40%</span> completed</h6>
                    <img src="@Progress" alt="image of progress bar">
                </div>
            </div>

        </div>
    </div>
</div>
@code {
    private string Greece = "images/greece.jpg";
    private string Leaf = "images/leaf.svg";
    private string Map = "images/map.svg";
    private string Send = "images/send.svg";
    private string Building = "images/building.svg";
    private string Rome = "images/rome.png";
    private string Progress = "images/progress.svg";
}
